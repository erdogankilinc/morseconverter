<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="25dp"
    tools:context=".MainActivity">


    <!-- Ana içerik -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Mevcut layout dosyanızın içeriği buraya gelecek -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:padding="25dp">

            <TextView
                android:id="@+id/tvfbu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="FBU MORSE CONVERTER"
                android:textAlignment="center"
                android:textColor="@color/laci"
                android:textSize="25sp"
                android:textStyle="bold" />

            <!--edit text to accept the input from the user-->

            <EditText
                android:id="@+id/etinput"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/tvfbu"
                android:layout_marginTop="15dp"
                android:background="#999999"
                android:gravity="start"
                android:textColor="@color/black" />

            <!--edit text to display output to the user.
                Edit text is used since the user can copy the
                text easily if he wants to-->


            <LinearLayout
                android:id="@+id/llout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/etinput"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnencode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/mybutton"
                    android:padding="0dp"
                    android:text="Encode"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnclear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/mybutton"
                    android:padding="0dp"
                    android:text="Clear"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btndecode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mybutton"
                    android:padding="0dp"
                    android:text="Decode"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <EditText
                android:id="@+id/etoutput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/llout"
                android:layout_marginTop="15dp"
                android:background="#999999"
                android:gravity="start"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>

    <!-- Hamburger Menu / NavigationDrawer -->
    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/drawerLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/toolbar_navdraw"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:layout_gravity="center"
                android:layout_marginTop="400dp"
                android:textColor="@color/lavender"
                android:textSize="36sp"/>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_gravity="start">

            <include
                layout="@layout/nav_drawer"/>

        </RelativeLayout>


    </androidx.drawerlayout.widget.DrawerLayout>

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@color/yesil"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:logo="@drawable/baseline_account_circle_24"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Toolbar"
        app:titleMarginStart="25dp" />



</androidx.constraintlayout.widget.ConstraintLayout>


